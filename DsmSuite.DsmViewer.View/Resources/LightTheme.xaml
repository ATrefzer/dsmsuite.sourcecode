<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:po="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options" 
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="BackgroundColor" po:Freeze="True">White</SolidColorBrush>
    <SolidColorBrush x:Key="ForegroundStandardColor" po:Freeze="True">#8a2be2</SolidColorBrush>
    <SolidColorBrush x:Key="ForegroundHoverColor" po:Freeze="True">#6f1abd</SolidColorBrush>
    <SolidColorBrush x:Key="ForegroundDisabledColor" po:Freeze="True">#909090</SolidColorBrush>

    <SolidColorBrush x:Key="MatrixColor1" po:Freeze="True">#D9E7F6</SolidColorBrush>
    <SolidColorBrush x:Key="MatrixColor2" po:Freeze="True">#F6E7D9</SolidColorBrush>
    <SolidColorBrush x:Key="MatrixColor3" po:Freeze="True">#F4D9F6</SolidColorBrush>
    <SolidColorBrush x:Key="MatrixColor4" po:Freeze="True">#D9F6E7</SolidColorBrush>
    <SolidColorBrush x:Key="MatrixColorCyclic" po:Freeze="True">Yellow</SolidColorBrush>

    <sys:Double x:Key="HighlightFactorHovered" >1.1</sys:Double>
    <sys:Double x:Key="HighlightFactorSelected" >1.2</sys:Double>
</ResourceDictionary>