    <SolidColorBrush x:Key="ErrorTextColor" po:Freeze="True">#ff0000</SolidColorBrush>
    <SolidColorBrush x:Key="SearchNoMatchTextColor" po:Freeze="True">#ff0000</SolidColorBrush>
